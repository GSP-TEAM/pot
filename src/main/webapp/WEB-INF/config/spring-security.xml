<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<security:http pattern="/resources/**" security="none"/>
	<security:http pattern="/dtds/**" security="none" />
	<security:http pattern="/js/**" security="none"/>
	<security:http pattern="/css/**" security="none"/>
	<security:http pattern="/images/**" security="none"/>
	<security:http pattern="/font/**" security="none"/>
	<security:http pattern="/favicon.ico" security="none"/>
	<security:http pattern="/**/*.js" security="none"/>
	<security:http pattern="/**/*.css" security="none"/>
	<security:http pattern="/**/*.json" security="none"/>
	<security:http pattern="/**/*.gif" security="none"/>
	<security:http pattern="/**/*.png" security="none"/>
			
	<security:http auto-config="true" use-expressions="true" create-session="never" entry-point-ref="unauthorizedEntryPoint">
		<security:headers>
			<security:cache-control />
			<security:content-type-options />
			<security:hsts />
			<security:frame-options policy="SAMEORIGIN"/>
			<security:xss-protection enabled="true" block="true"/>
		</security:headers>
	    <security:intercept-url pattern="/" access="permitAll" />
	    <security:intercept-url pattern="/logout" access="permitAll" />
	    <security:intercept-url pattern="/login_duplicate" access="permitAll" />
	    <security:intercept-url pattern="/access_denied" access="permitAll" />
	    <security:intercept-url pattern="/login_fail" access="permitAll" />
	    <security:intercept-url pattern="/getSession" access="permitAll" />
	    <security:intercept-url pattern="/messageBundle" access="permitAll" />
	    <security:intercept-url pattern="/login_success" access="authenticated" />
	    <security:intercept-url pattern="#{SICC_LOGIN_URL}" access="permitAll" />
	    <security:intercept-url pattern="/saml/acs" access="permitAll" />
	    <security:intercept-url pattern="/*/svm/common" access="permitAll" />
	    <security:intercept-url pattern="/*/svm/main" access="permitAll" />
	    <security:intercept-url pattern="/*/svm/about" access="permitAll" />
<!-- 	    <security:intercept-url pattern="/*/svm/procedure" access="permitAll" /> -->
	    <security:intercept-url pattern="/*/svm/volunteer" access="permitAll" />
	    <security:intercept-url pattern="/*/svm/contact" access="permitAll" />
	    <security:intercept-url pattern="/*/svm/forgotPw" access="permitAll" />
	    <security:intercept-url pattern="/*/svm/forgotPwAfter" access="permitAll" />
	    <security:intercept-url pattern="/*/svm/chngPw" access="permitAll" />
	    <security:intercept-url pattern="/svm/user/chngPw" access="permitAll" />
	    <security:intercept-url pattern="/*/mail/forgotPw" access="permitAll" />
	    
	    <security:intercept-url pattern="/*/svm/user/*" access="permitAll" />
		<!-- 작업 으로 인한 임시 허용 -->
	    <security:intercept-url pattern="/*/svm/application/*" access="permitAll" />
	    <!--   -->
	    <security:intercept-url pattern="/*/svm/application/application" access="permitAll" />
	    <security:intercept-url pattern="/*/svm/application/**" access="permitAll" />
	    <security:intercept-url pattern="/mail/*" access="permitAll" />
	    
	    <security:intercept-url pattern="/*/#{SICC_SYSTEM.toLowerCase()}/*/view/**" access="permitAll" />
	    <security:intercept-url pattern="/changeLocale" access="permitAll" />
	    <security:intercept-url pattern="/**" access="authenticated" />
	    <security:form-login login-page="#{SICC_LOGIN_URL}"
	    			login-processing-url="/loginProcess"
	                username-parameter="id"
	                password-parameter="pw"
	                authentication-success-handler-ref="siccAuthenticationSuccessHandler"
	                authentication-failure-handler-ref="siccAuthenticationFailureHandler"
	                />
	    <security:session-management>
	        <security:concurrency-control max-sessions="1" expired-url="/login_duplicate" error-if-maximum-exceeded="false"/>
	    </security:session-management>
	    <security:logout delete-cookies="JSESSIONID"/>
	    <security:access-denied-handler ref="siccAccessDeniedHandler" />
	    <!-- <security:custom-filter ref="authenticationTokenProcessingFilter" before="FORM_LOGIN_FILTER" /> -->
	    <security:csrf request-matcher-ref="csrfSecurityRequestMatcher"/>
	</security:http>
	
	<!-- 인증전 일 경우 -->
	<bean id="unauthorizedEntryPoint" class="com.sicc.security.handler.UnauthorizedEntryPoint">
		<property name="redirect" value="false" />
        <property name="loginFormUrl" value="#{SICC_LOGIN_URL}"/>
        <property name="deniedFwdUrl" value="/not_login"/>
    </bean>
    
    <!-- <bean id="authenticationTokenProcessingFilter" class="com.sicc.security.AuthenticationTokenProcessingFilter" /> -->
    
	<security:authentication-manager alias="authenticationManager">
		<security:authentication-provider ref="svmSiccAuthenticationProvider"/>
	</security:authentication-manager>
	
	<bean id="siccAuthenticationSuccessHandler" class="com.sicc.security.handler.SiccAuthenticationSuccessHandler">
	    <property name="targetUrlParameter" value="loginRedirect" />
	    <property name="useReferer" value="false" />
	    <property name="defaultUrl" value="/" />
	</bean>
		
	<bean id="siccAuthenticationFailureHandler" class="com.sicc.security.handler.SiccAuthenticationFailureHandler">
	    <property name="loginIdName" value="id" />
	    <property name="loginPwdName" value="pw" />
	    <property name="loginRedirectName" value="loginRedirect" />
	    <property name="exceptionMsgName" value="securityExceptionMsg" />
	    <property name="defaultFailureUrl" value="/login_fail" />
	</bean>
	
	<bean id="siccAccessDeniedHandler" class="com.sicc.security.handler.SiccAccessDeniedHandler">
	    <property name="errorPage" value="/access_denied" />
	</bean>
	
<!-- 	<bean id="siccLogoutSuccessHandler" class="com.sicc.security.handler.SiccLogoutSuccessHandler"> -->
<!--         <property name="defaultUrl" value="/logout_success"/> -->
<!-- 	</bean> -->

    <!-- csrf 체크 제외 -->
	<bean id="csrfSecurityRequestMatcher" class="com.sicc.security.CsrfSecurityRequestMatcher">
	</bean>
	
	<bean class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler"/>

	<bean id="svmSiccUserService" class="com.gms.svm.service.SVMSiccUserService"/>
	<bean id="svmSiccAuthenticationProvider" class="com.gms.svm.service.SVMLoginProvider"/>
	
	<bean id="siccUserService" class="com.gms.common.login.SiccUserService"/>
	<bean id="siccAuthenticationProvider" class="com.gms.common.login.LoginProvider"/>
	
	<bean id="passwordEncoder" class="org.springframework.security.authentication.encoding.ShaPasswordEncoder">
		<constructor-arg value="256"/>
		<property name="encodeHashAsBase64" value="true"/>
	</bean>
	
	<bean id="saltSource" class="org.springframework.security.authentication.dao.ReflectionSaltSource">
		<property name="userPropertyToUse" value="salt"/>
	</bean>
		
</beans>
